{% extends 'includes/layout.njk' %}

{% block body %}
<div class="nhsuk-grid-row">
  <div class="nhsuk-grid-column-two-thirds app-component-reading-width">

    <h1>{{pageTitle}}</h1>


    {%- if landingPage == 'true' %}
    <p class="nhsuk-lede-text app-lede-text">{{pageDescription}}</p>
    {% else %}
    <p class="nhsuk-lede-text">{{pageDescription}}</p>
    {% endif %}

  </div>
  <div class="nhsuk-grid-column-two-thirds app-component-reading-width">

    {% block bodyContent %}
    {% endblock %}

  </div>

    {% block aside %}
    <aside class="nhsuk-grid-column-one-third">
      {% block asideContent %}
      {% endblock %}
    </aside>
    {% endblock %}
  </div>
{% endblock %}
