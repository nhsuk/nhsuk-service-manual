{% extends "layouts/layout.njk" %}

{% set pageTitle = "Standalone example" %}
{% set bodyClasses = "nhsuk-u-static-padding-0" %}

{% block head %}
  <meta name="description" content="NHS digital service manual - standalone example">
  <link rel="stylesheet" href="{{ getAssetPath("stylesheets/preview.scss") }}">
  <script src="{{ getAssetPath("main.js") }}" defer></script>
{% endblock %}

{% block header %}
  {{ header({
    showNav: "false",
    showSearch: "false"
  }) }}
{% endblock %}

{% block beforeContent %}{% endblock %}

{% block main %}
  {{ exampleHtml | safe }}
{% endblock %}

{% block footer %}
  {{ footer() }}
{% endblock %}

{% block bodyEnd %}
  <script src="{{ getAssetPath("javascripts/vendor/iframeResizer.contentWindow.min.js") }}"></script>
{% endblock %}
