{% extends "layouts/layout.njk" %}

{% set pageTitle = "Standalone example" %}
{% set bodyClasses = "nhsuk-u-static-padding-0" %}

{% block head %}
  <meta name="description" content="NHS digital service manual â€“ standalone example">
  <meta name="format-detection" content="telephone=no">

  <link rel="stylesheet" href="{{ getAssetPath("stylesheets/nhsuk-frontend.min.css") }}">
  <link rel="stylesheet" href="{{ getAssetPath("stylesheets/preview.scss") }}">
{% endblock %}

{% block header %}
  {{ header({
    service: {
      text: "Service name"
    },
    account: {
      items: [
        {
          text: "Log in",
          href: "#"
        }
      ]
    }
  }) }}
{% endblock %}

{% block beforeContent %}{% endblock %}

{% block main %}
  {{ exampleHtml | safe }}
{% endblock %}

{% block footer %}
  {{ footer() }}
{% endblock %}

{% block bodyEnd %}
  <script src="{{ getAssetPath("javascripts/nhsuk-frontend.min.js") }}" type="module"></script>
  <script src="{{ getAssetPath("preview.js") }}" type="module"></script>
  <script type="module">
    import { initAll } from '{{ getAssetPath("javascripts/nhsuk-frontend.min.js") }}'
    initAll({
      errorSummary: {
        disableAutoFocus: true
      },
      notificationBanner: {
        disableAutoFocus: true
      }
    })
  </script>
{% endblock %}
