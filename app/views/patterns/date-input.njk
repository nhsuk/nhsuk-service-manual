            <h2 >Code and design</h2>



            <div class="example grey-background nhsuk-u-margin-bottom-4">


                {% from 'components/date-input/macro.njk' import dateInput %}

                        {{ dateInput({
                        "id": "dob",
                        "namePrefix": "dob",
