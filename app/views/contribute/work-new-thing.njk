{% set pageTitle = 'Work on a new thing' %}
{% set pageDescription = 'TBD.' %}

{% extends 'includes/layout.njk' %}
{% from 'components/inset-text/macro.njk' import insetText %}

{% block breadcrumb %}
{{ breadcrumb({
  items: [
    {
      href: "/service-manual/",
      text: "Home"
    }
  ],
  href: "/service-manual/contribute",
  text: "Contribute"
}) }}
{% endblock %}

{% block body %}
<div class="nhsuk-grid-row">
  <div class="nhsuk-grid-column-two-thirds">
    <h1 class="nhsuk-u-margin-bottom-5">{{pageTitle}}</h1>
    <p class="nhsuk-body-l nhsuk-u-margin-bottom-8">Anyone can work on a new thing for the NHS digital service manual.</p>
  </div>
</div>

<div class="nhsuk-grid-row">
  <div class="nhsuk-grid-column-two-thirds">

    <h2>How to work on a new thing</h2>
    <h3>1. Sign up to work on a thing in the backlog</h3>
    <p>[Paragraph]</p>
    <h3>2. Plan your work with the standards team</h3>
    <p>[Paragraph]</p>
    <h3>3. Research and develop your contribution</h3>
    <p>[Paragraph]</p>
    <h3>4. Send your contribution for review</h3>
    <p>[Paragraph]</p>

    <div class="nhsuk-review-date">
    <p class="nhsuk-body-s">Updated: January 2019</p>
    </div>
  </div>

  <div class="nhsuk-grid-column-one-third">
    <div class="app-u-border-top">
      <h3>Contribute</h3>
      <ul>
        <li><a href="/service-manual/contribute/backlog">Community backlog</a></li>
        <li><a href="/service-manual/contribute/propose-new-thing">Propose a new thing</a></li>
        <li><a href="/service-manual/contribute/criteria">Contribution criteria</a></li>
      </ul>
    </div>
  </div>
</div>
{% endblock %}
