{% from 'checkboxes/macro.njk' import checkboxes %}

<form>
  {{ checkboxes({
    "idPrefix": "example",
    "name": "example",
    "fieldset": {
      "legend": {
        "text": "How would you like to be contacted?",
        "classes": "nhsuk-fieldset__legend--l",
        isPageHeading: true
      }
    },
    "hint": {
      "text": "Select all options that are relevant to you."
    },
    "items": [
      {
        "value": "email",
        "text": "Email"
      },
      {
        "value": "phone",
        "text": "Phone"
      },
      {
        "value": "text message",
        "text": "Text message"
      }
    ]
  }) }}
</form>
