{% from 'radios/macro.njk' import radios %}
{% from 'fieldset/macro.njk' import fieldset %}
{% from 'hint/macro.njk' import hint %}

{% set hintHtml -%}
  <p class="nhsuk-u-margin-bottom-2">This is a 10 digit number, like <span class="nhsuk-u-nowrap">987 654 3210</span>, that you can find on an NHS letter, prescription or in the NHS App</p>
{%- endset %}

{{ radios({
  idPrefix: "example-hints",
  name: "example-hints",
  fieldset: {
    legend: {
      text: "Do you know your NHS number?",
      classes: "nhsuk-fieldset__legend--l",
      isPageHeading: true
    }
  },
  hint: {
    html: hintHtml
  },
  items: [
  {
    value: "yes",
    text: "Yes, I know my NHS number"
  },
  {
    value: "no",
    text: "No, I do not know my NHS number"
  },
  {
    value: "not sure",
    text: "I'm not sure"
  }
]
}) }}
