{% from "radios/macro.njk" import radios %}
{% from "fieldset/macro.njk" import fieldset %}
{% from "hint/macro.njk" import hint %}

{% set hintHtml -%}
  <p class="nhsuk-u-margin-bottom-2">Conditions include asthma, dementia, diabetes, cancer or heart disease</p>
{%- endset %}

{{ radios({
  idPrefix: "example-hints",
  name: "exampleHints",
  fieldset: {
    legend: {
      text: "Do you have any medical conditions?",
      classes: "nhsuk-fieldset__legend--l",
      isPageHeading: true
    }
  },
  hint: {
    html: hintHtml
  },
  items: [
    {
      value: "yes",
      text: "Yes"
    },
    {
      value: "no",
      text: "No"
    },
    {
      divider: "or"
    },
    {
      value: "not-sure",
      text: "Not sure"
    }
  ]
}) }}
