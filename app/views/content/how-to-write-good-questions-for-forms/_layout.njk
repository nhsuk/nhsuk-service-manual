{% extends 'includes/layout.njk' %}

{% block breadcrumb %}
  {{ breadcrumb({
    items: [
      {
        href: "/service-manual/",
        text: "Home"
      },
      {
        href: "/service-manual/content",
        text: "Content style guide"
      }
    ],
    href: "/service-manual/content/how-to-write-good-questions-for-forms",
    text: "How to write good questions for forms"
  }) }}
{% endblock %}

{% block body %}

  <div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-full app-component-reading-width">

      <h1>
        {%- if pageSection %}
        <span class="nhsuk-caption-l">
          {{pageSection}}
          <span class="nhsuk-u-visually-hidden"> - </span>
        </span>
        {% else %}
        {% endif %}
        {{pageTitle}}
      </h1>

      {% include 'content/how-to-write-good-questions-for-forms/write-good-questions-nav.njk' %}

      <p class="nhsuk-body-l">{{pageDescription}}</p>

      {% block bodyContent %}
      {% endblock %}

    </div>
  </div>

{% endblock %}
