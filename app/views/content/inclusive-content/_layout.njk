{% extends "layouts/layout.njk" %}

{% block beforeContent %}
  {{ breadcrumb({
    items: [
      {
        href: "/",
        text: "Home"
      },
      {
        href: "/content",
        text: "Content guide"
      },
      {
        href: "/content/inclusive-content",
        text: "Inclusive content"
      }
    ]
  }) }}
{% endblock %}

{% block content %}

  <div class="nhsuk-grid-row">
    <div class="nhsuk-grid-column-full app-component-reading-width">

      <h1>
        {%- if pageSection %}
        <span class="nhsuk-caption-l">
          {{pageSection}}
          <span class="nhsuk-u-visually-hidden"> - </span>
        </span>
        {% else %}
        {% endif %}
        {{pageTitle}}
      </h1>
      {% include "content/inclusive content/age.njk" %}

      <p class="nhsuk-body-l">{{pageDescription}}</p>

      {% block bodyContent %}
      {% endblock %}

    </div>
  </div>

{% endblock %}
