{% from 'input/macro.njk' import input %}
{% from 'button/macro.njk' import button %}

{{ input({
  label: {
    text: "What is your NHS number?",
    classes: "nhsuk-label--l",
    isPageHeading: true
  },
  hint: {
    html: "Your NHS number is a 10 digit number that you find on any letter the NHS has sent you. For example, <span class=\"nhsuk-u-nowrap\">123 456 7890</span>."
  },
  errorMessage: {
    "text": "Your NHS number is too long."
  },
  id: "nhs-number",
  name: "nhs-number",
  classes: "nhsuk-input--width-10"
}) }}

{{ button({
  "text": "Continue"
}) }}
