{
  "name": "nhsuk-service-manual",
  "version": "7.11.0",
  "description": "NHS digital service manual",
  "engines": {
    "node": "^20.9.0 || ^22.11.0"
  },
  "main": "app.js",
  "scripts": {
    "prebuild": "npm run clean",
    "build": "NODE_ENV=${NODE_ENV:-production} webpack",
    "clean": "del-cli public/**",
    "lint": "npm run lint:js && npm run lint:css && npm run lint:prettier",
    "lint:fix": "npm run lint:js:fix && npm run lint:css:fix && npm run lint:prettier:fix",
    "lint:prettier": "prettier --cache --cache-location .cache/prettier --cache-strategy content --check .",
    "lint:prettier:fix": "prettier --write .",
    "lint:js": "eslint --cache --cache-location .cache/eslint --cache-strategy content --color --ignore-path .gitignore \"**/*.{cjs,js,mjs}\"",
    "lint:js:fix": "npm run lint:js -- --fix",
    "lint:css": "stylelint --cache --cache-location .cache/stylelint --cache-strategy content --color --formatter verbose --ignore-path .gitignore \"**/*.{md,scss}\"",
    "lint:css:fix": "npm run lint:css -- --fix",
    "nuke": "npm run clean && rm -rf node_modules/",
    "start": "node .",
    "test": "npm run lint && npm run test:unit",
    "test:unit": "jest --coverage=true",
    "watch": "concurrently --prefix none npm:watch:*",
    "watch:build": "NODE_ENV=development npm run build -- --watch",
    "watch:start": "NODE_ENV=development node --watch .",
    "prepare": "husky"
  },
  "author": "https://github.com/nhsuk",
  "repository": {
    "type": "git",
    "url": "https://github.com/nhsuk/nhsuk-service-manual.git"
  },
  "license": "MIT",
  "dependencies": {
    "accessible-autocomplete": "^2.0.4",
    "axios": "^1.9.0",
    "basic-auth": "^2.0.1",
    "browser-sync": "^3.0.4",
    "cheerio": "^1.0.0",
    "compression": "^1.8.0",
    "express": "^4.21.2",
    "gray-matter": "^4.0.3",
    "helmet": "^4.6.0",
    "highlight.js": "^11.11.1",
    "iframe-resizer": "^4.4.2",
    "js-beautify": "^1.15.4",
    "lunr": "^2.3.9",
    "marked": "^15.0.11",
    "nhsuk-frontend": "^9.6.1",
    "nunjucks": "^3.2.4"
  },
  "devDependencies": {
    "@babel/core": "^7.27.1",
    "@babel/preset-env": "^7.27.2",
    "@typescript-eslint/parser": "^8.32.1",
    "autoprefixer": "^10.4.21",
    "babel-loader": "^10.0.0",
    "concurrently": "^9.1.2",
    "copy-webpack-plugin": "^13.0.0",
    "cssnano": "^7.0.7",
    "del-cli": "^6.0.0",
    "eslint": "^8.57.1",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-import": "^2.31.0",
    "husky": "^9.1.7",
    "jest": "^29.7.0",
    "postcss": "^8.5.4",
    "postcss-load-config": "^6.0.1",
    "postcss-loader": "^8.1.1",
    "postcss-markdown": "^1.3.0",
    "postcss-scss": "^4.0.9",
    "prettier": "^3.5.3",
    "sass-embedded": "^1.89.0",
    "sass-loader": "^16.0.5",
    "source-map-loader": "^5.0.0",
    "stylelint": "^16.19.1",
    "stylelint-config-gds": "^2.0.0",
    "stylelint-order": "^7.0.0",
    "webpack": "^5.99.8",
    "webpack-cli": "^6.0.1",
    "webpack-manifest-plugin": "^5.0.1"
  }
}
